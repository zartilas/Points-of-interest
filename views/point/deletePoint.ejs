<div class="jumbotron mt-5">
    <div class="row">
        <div class="col-8">
            <h4 class="font-weight-bold"><%= point.pointname %>, Address: <%= point.address %></h4>
            <p class="lead">Alert! do you want to delete this point??</p>
            <p class="lead">
            <form action="/deletePoint/<%= point._id %>" method="POST">
                <button class="btn btn-danger" type="submit">Delete Address</button>
                <a class="btn btn-light" href="/points">Cancel</a>
            </form>
            </p>
        </div>
        <div class="col-4">
            <h1 class="font-weight-bolder text-danger float-right">
                <i class="fa fa-trash"></i>
            </h1>
        </div>
    </div>    
</div>