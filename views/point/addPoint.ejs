<div class="card mt-5">
    <div class="card-header">
        <h4 class="font-weight-bold">Add New Point</h4>
    </div>
    <div class="card-body">
        <form action="/addPoint" method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="pointname">Point Name</label>
                        <input type="text" class="form-control" name="pointname" placeholder="Enter point name" id="pointname">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="address">Address</label>
                        <input type="text" class="form-control" name="address" placeholder="Enter address" id="address" row="3">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="description">Description</label>
                        <input type="text" class="form-control" name="description" placeholder="Enter your description here...." id="description" row="3">
                    </div>
                </div>
         
            
            </div>
            <div class="mt-5">
                <button itype="submt" class="btn btn-success">Submit</button>
                <a href="points" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>