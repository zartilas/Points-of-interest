<div class="jumbotron mt-5">
    <div class="row">
        <div class="col-8">
            <h4 class="font-weight-bold"><%= user.firstname %> <%= user.lastname %></h4>
            <p class="lead">Alert! do you want to delete this user??</p>
            <p class="lead">
            <form action="/deleteUser/<%= user._id %>" method="POST">
                <button class="btn btn-danger" type="submit">Delete</button>
                <a class="btn btn-light" href="/users">Cancel</a>
            </form>
            </p>
        </div>
        <div class="col-4">
            <h1 class="font-weight-bolder text-danger float-right">
                <i class="fa fa-trash"></i>
            </h1>
        </div>
    </div>    
</div>